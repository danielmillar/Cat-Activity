<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin url="https://github.com/wavy-cat/cat-activity">
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>cat.wavy.catactivity</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Cat Activity</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="unknown@wavycat.ru" url="https://wavycat.ru">WavyCat</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        Plugin for Jetbrains IDE to show your activity in your Discord profile.
        <br/>
        <b>
            The settings are in <i>Settings > Tools > Cat Activity</i>
        </b>
  ]]></description>

    <change-notes>
        Now the activity name will depend on the IDE you are using.
        For instance, if you are working in PyCharm, then your Discord status will be “Playing a game PyCharm”, instead
        of JetBrains IDE (which has not entirely gone, it's now a fallback name).

        New icons have been added, and old ones have been extended.
    </change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="cat.wavy.catactivity.listener.PostStartListener"/>

        <projectConfigurable
                id="cat.wavy.catactivity.setting.CatConfigurableProject"
                displayName="Cat Activity"
                instance="cat.wavy.catactivity.setting.CatConfigurable"
                parentId="tools"
        />
    </extensions>

    <applicationListeners>
        <listener
                class="cat.wavy.catactivity.listener.FileListener"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"
        />

        <listener class="cat.wavy.catactivity.listener.ProjectListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <projectListeners>
        <listener
                class="cat.wavy.catactivity.listener.FileProblemListener"
                topic="com.intellij.analysis.problemsView.ProblemsListener"
        />
    </projectListeners>
</idea-plugin>